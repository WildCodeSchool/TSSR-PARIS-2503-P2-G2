###################################
#!/bin/bash
#   version     : 0.0 
#   Auteur      : Sadek SABIRI
#   Description : Script de création ou suppression d’un répertoire
#                 selon son existence.
###################################

#!/bin/bash

# Fonction pour créer un répertoire
creer_repertoire() {
    local repertoire=$1
    if [ ! -d "$repertoire" ]; then
        mkdir -p "$repertoire"
        echo "Le répertoire $repertoire a été créé."
    else
        echo "Le répertoire $repertoire existe déjà."
    fi
}

# Fonction pour supprimer un répertoire
supprimer_repertoire() {
    local repertoire=$1
    if [ -d "$repertoire" ]; then
        read -p "Voulez-vous vraiment supprimer $repertoire ? (o/n) " confirmation
        if [ "$confirmation" = "o" ] || [ "$confirmation" = "O" ]; then
            rm -rf "$repertoire"
            echo "Le répertoire $repertoire a été supprimé."
        else
            echo "Suppression annulée."
        fi
    else
        echo "Le répertoire $repertoire n'existe pas."
    fi
}

# Menu principal
while true; do
    echo ""
    echo "1. Créer un répertoire"
    echo "2. Supprimer un répertoire"
    echo "3. Quitter"
    read -p "Choisissez une option (1-3): " option

    case $option in
        1)
            read -p "Entrez le chemin du répertoire à créer: " chemin
            creer_repertoire "$chemin"
            ;;
        2)
            read -p "Entrez le chemin du répertoire à supprimer: " chemin
            supprimer_repertoire "$chemin"
            ;;
        3)
            echo "Au revoir!"
            exit 0
            ;;
        *)
            echo "Option invalide. Veuillez choisir entre 1 et 3."
            ;;
    esac
done
